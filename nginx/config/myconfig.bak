upstream project_auth{
    server server_auth_v3:3001;
}

upstream project_fp{
    server server_1:3002;
}

upstream project_p25{
    server server_25:3003;
}

upstream project_p27{
    server server_27:3004;
}
#upstream project{ server server_vrpjob:3001; }
